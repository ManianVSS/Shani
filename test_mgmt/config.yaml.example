# Production Settings

# Logger Configuration
LOG_FILE: logs/shani.log
LOG_LEVEL: INFO

# Set DEBUG to True to allow static file serving
DEBUG: True

# Domain settings
FQDN: '*'
ALLOWED_HOSTS:
  - '*'

# Static and data file config
TEMPLATE_DIRS: [ 'build', 'templates', 'node_modules' ]
DATA_MOUNT_DIR: .
FORCE_SCRIPT_NAME: ''
STATIC_FILES: [ 'static', 'build/static', 'build/assets', ]
STATIC_URLS: [ '/static/', '/assets/' ]
MEDIA_URL: /data/

# Language and timezone settings
LANGUAGE_CODE: en-us
USE_I18N: False
USE_TZ: True
TIME_ZONE: 'Asia/Kolkata'

# Database configuration
DATABASE:
  ENGINE: django.db.backends.postgresql_psycopg2
  NAME: testmgmt
  USER: testmgmtadmin
  PASSWORD: testmgmtadmin@123
  HOST: localhost
  PORT: 5432